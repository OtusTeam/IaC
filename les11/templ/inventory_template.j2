all:
  hosts:
{% for host in yandex_cloud_hosts %}
    {{ host.name }}:
      yandex_cloud_image: {{ host.image }}
      yandex_cloud_instance_type: {{ host.instance_type }}
{% endfor %}
  vars:
    net_name: {{ yandex_cloud_net_name }}
    sub_name: {{ yandex_cloud_sub_name }}
    sub_cidr: {{ yandex_cloud_sub_cidr }}
    sub_zone: {{ yandex_cloud_sub_zone }}
 
