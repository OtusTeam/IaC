  vars:
    top: 6

  children:
    webservers:
      hosts:
{% for i in range(1, top + 1) %}
        192.168.1.{{ i }}:
          ansible_host: 192.168.1.{{ i }}
          ansible_user: ubuntu
{% endfor %}
    loadbalancer:
      hosts:
        lb:
          ansible_host: 192.168.1.100
          ansible_user: ubuntu



all:
  children:
    webservers:
      hosts:
{% for i in range(1, 6) %}
        web-{{ i }}:
          ansible_host: 192.168.1.{{ i }}
{% endfor %}
    loadbalancer:
      hosts:
        lb:
